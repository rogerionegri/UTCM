FUNCTION SVM_MULTICLASS_LIBSVM, Img, PntROIs, ParamStruct
  COMMON PkgOpSolvers, PATH_OP_SOLVERS

  PATH_OP_SOLVERS = "/home/rogerio/Desktop/IDLWorkbench.MADe/ProjMADE/Classifiers/OCSVM/LibSVM_solver/"

  ;Data normalization for SVM (good for LibSVM)
  Image = IMAGE_NORMALIZATION(Img)

  IMAGE2TEXT_LIBSVM_PREDICT_FORMAT, Image ;Imagem a ser usada no LibSVM (entrada em texto)
  ;ROIs = RESAMPLE_ROI(PntROIs, 1.0) ;amostragem de sampling% do total de pixels
  ROIs = PntROIs

  ;Define the classes used in the binary separation
  ;The returned value is used to build the training samples (as ROIs)
  ;BinDT = CLASS_SELECTOR(ROIs,ParamSTRUCT)

  Dims = GET_DIMENSIONS(Image)
  NC = Dims[1]
  NL = Dims[2]

  ;DiImage = FLTARR(N_ELEMENTS(BinDT[0,*]),NC,NL)
  ;DiImage = FLTARR(N_ELEMENTS(ROIs),NC,NL)
  ;HipParams = PTRARR(N_ELEMENTS(BinDT[0,*]))

  ;Training data set building
  PtrTRAINING = BUILD_TRAINING_DATA_MULTICLASS(Image,ROIs)
  DiImage = INTERFACE_LIBSVM_TRAIN_PREDICT__COMPLETE_MULTICLASS(PtrTRAINING,ParamSTRUCT,ROIs)
  ;DiImage = INTERFACE_LIBSVM_TRAIN_PREDICT__COMPLETE_MULTICLASS_WITHGS(PtrTRAINING,ParamSTRUCT,ROIs)
  ClaImage = CLASSIF(DiImage,ROIs)
  IndexImage = CLASSIF_INDEX(ClaImage,ROIs)

  Return, {Index: IndexImage, Classification: ClaImage, RuleImage: DiImage}
END